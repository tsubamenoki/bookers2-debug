      <% book.book_comments.each do |comment| %>
          <td><%= link_to(comment.user) do %>
            <%= image_tag comment.user.get_profile_image, size:"50x50" %><br>
            <%= comment.user.name %>
            <% end %>
          </td>
          <td><%= comment.comment %></td>
        <% if comment_user=current_user %>
          <td><%= link_to "Destroy", book_book_comment_path(comment.id), method: :delete, remote:true %></td>
        <% end %>
      <% end %>
      
      